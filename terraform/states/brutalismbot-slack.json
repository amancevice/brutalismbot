{
  "StartAt": "PushToSlack",
  "States": {
    "PushToSlack": {
      "Type": "Task",
      "Resource": "${slack_push_lambda_arn}",
      "End": true,
      "Retry": [
        {
          "IntervalSeconds": 3,
          "MaxAttempts": 6,
          "BackoffRate": 2,
          "ErrorEquals": [
            "CalledProcessError",
            "Lambda.SdkClientException",
            "Lambda.ServiceException"
          ]
        }
      ]
    }
  }
}
