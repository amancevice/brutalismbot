{
  "StartAt": "Push to Twitter",
  "States": {
    "Push to Twitter": {
      "Type": "Task",
      "Resource": "${twitter_push_lambda_arn}",
      "End": true,
      "Retry": [
        {
          "IntervalSeconds": 3,
          "MaxAttempts": 6,
          "BackoffRate": 2,
          "ErrorEquals": [
            "CalledProcessError",
            "Lambda.SdkClientException",
            "Lambda.ServiceException",
            "Lambda.Unknown"
          ]
        }
      ],
      "Catch": [
        {
          "Next": "Push to Dead Letter Queue",
          "ResultPath": "$.Error",
          "ErrorEquals": [
            "States.ALL"
          ]
        }
      ]
    },
    "Push to Dead Letter Queue": {
      "Type": "Task",
      "Resource": "arn:aws:states:::sqs:sendMessage",
      "End": true,
      "Parameters": {
        "QueueUrl": "${dead_letter_queue_url}",
        "MessageBody.$": "$"
      }
    }
  }
}
